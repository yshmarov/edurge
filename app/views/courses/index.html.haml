%h1 Listing courses

%table
  %thead
    %tr
      %th Name
      %th Descroption
      %th User
      %th Category
      %th
      %th
      %th

  %tbody
    - @courses.each do |course|
      %tr
        %td= course.name
        %td= course.descroption
        %td= course.user
        %td= course.category
        %td= link_to 'Show', course
        %td= link_to 'Edit', edit_course_path(course)
        %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }

%br

